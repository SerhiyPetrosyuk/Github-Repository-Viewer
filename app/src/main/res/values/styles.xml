<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="list_item_points_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">25</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="search_user_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@mipmap/ic_search_action</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="search_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/some_user_name_hint</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="search_text_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:text">@string/input_user_name</item>
        <item name="android:layout_above">@id/rl_searsh_btn_holder</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="list_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dividerHeight">8dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:paddingTop">8dp</item>
    </style>
</resources>
